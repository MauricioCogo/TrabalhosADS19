import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Connection {

    private static final String URL = "jdbc:postgresql://localhost:5432/seu_banco"; // Substitua "seu_banco" pelo nome do banco
    private static final String USER = "seu_usuario"; // Substitua "seu_usuario" pelo nome do usuário
    private static final String PASSWORD = "sua_senha"; // Substitua "sua_senha" pela senha do usuário

    public static void main(String[] args) {
        Connection connection = null;
        try {
            // Tenta estabelecer a conexão
            connection = DriverManager.getConnection(URL, USER, PASSWORD);
            if (connection != null) {
                System.out.println("Conexão estabelecida com sucesso!");
            }
        } catch (SQLException e) {
            System.out.println("Erro ao conectar: " + e.getMessage());
        } finally {
            // Fecha a conexão
            if (connection != null) {
                try {
                    connection.close();
                } catch (SQLException e) {
                    System.out.println("Erro ao fechar a conexão: " + e.getMessage());
                }
            }
        }
    }
}
