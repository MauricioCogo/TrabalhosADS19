<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:padding="10dp"> <!-- Padding para o ScrollView -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:padding="10dp"> <!-- Padding para o LinearLayout principal -->

        <!-- Título da Tela -->
        <TextView
            android:id="@+id/titulo_tela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Criar Tarefa"
            android:textSize="28sp"
            android:textColor="#3a3a3a"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:padding="10dp"/> <!-- Padding no título -->

        <!-- Layout para os campos da tarefa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="#f7f7f7">

        <!-- Campo para título da tarefa -->
        <EditText
            android:id="@+id/editTextTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título da Tarefa"
            android:inputType="text"
            android:padding="10dp"/> <!-- Padding no EditText do título -->

        <!-- Campo para data de vencimento -->
        <EditText
            android:id="@+id/descricao_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:inputType="text"
            android:padding="10dp"/> <!-- Padding no EditText da data -->

        <!-- Campo para descrição da tarefa -->
        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center"
            android:padding="10dp"/> <!-- Padding no DatePicker -->

        <!-- Campo para selecionar prioridade -->
        <Spinner
            android:id="@+id/spinnerPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/> <!-- Padding no Spinner de prioridade -->

        <!-- Campo para selecionar categoria -->
        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/> <!-- Padding no Spinner de categoria -->

        <!-- Container para as subtarefas -->
        <LinearLayout
            android:id="@+id/subtarefasContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="10dp"/> <!-- Padding no container de subtarefas -->

        <!-- Botão para adicionar subtarefa -->
        <Button
            android:id="@+id/btnAdicionarSubtarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Subtarefa"
            android:layout_marginTop="16dp"
            android:padding="10dp"/> <!-- Padding no botão de adicionar subtarefa -->

        <!-- Botão para salvar tarefa -->
        <Button
            android:id="@+id/btnSalvarTarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Tarefa"
            android:layout_marginTop="16dp"
            android:padding="10dp"/> <!-- Padding no botão de salvar tarefa -->
    </LinearLayout>
</LinearLayout>
    </ScrollView>
