<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_subtask_item">

    <CheckBox
        android:id="@+id/check_subtarefa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Subtarefa Exemplo"
        android:textSize="16sp"
        android:textColor="#000000"
        android:buttonTint="#4a4a4a" />

    <Button
        android:id="@+id/btn_editar_subtarefa"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/lapis"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_excluir_subtarefa"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/lata"
        android:layout_marginEnd="8dp" />
</LinearLayout>
